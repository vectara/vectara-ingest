    border: 1px solid var(--vectara-border);
    border-radius: 0.25rem;
    background: var(--vectara-card-bg);
}

.issue-card h4 {
    font-size: 0.875rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
}

.error-label {
    font-size: 0.75rem;
    margin-bottom: 0.5rem;
}

.error-label strong {
    color: #dc2626;
}

.error-label code {
    background: rgba(220, 38, 38, 0.1);
    color: #dc2626;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.7rem;
}

.issue-card p {
    font-size: 0.75rem;
    margin-bottom: 0.5rem;
    color: var(--vectara-text-muted);
}

.issue-card pre {
    margin: 0.5rem 0 0 0;
}

/* Footer Text */
.footer-text {
    text-align: center;
    font-size: 0.875rem;
    padding: 1rem 0;
    color: var(--vectara-text-muted);
}

.footer-text strong {
    color: var(--md-default-fg-color);
}

.footer-text a {
    color: var(--vectara-primary);
    text-decoration: none;
}

.footer-text a:hover {
    text-decoration: underline;
}

/* ============================================
   Base Configuration Page Components
   ============================================ */

/* Config Structure */
.config-structure {
    background: rgba(63, 81, 181, 0.05);
    border-left: 4px solid var(--vectara-primary);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin: 1.5rem 0;
}

.config-structure h3 {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--md-default-fg-color);
}

.config-structure pre {
    margin: 0;
    background: var(--md-code-bg-color);
    border-radius: 0.375rem;
    padding: 1rem;
}

/* Option List */
.option-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin: 1rem 0;
}

.option-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    padding: 0.75rem;
    background: var(--md-code-bg-color);
    border-radius: 0.375rem;
    border-left: 3px solid var(--vectara-primary);
}

.option-name {
    font-family: var(--md-code-font-family);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--vectara-primary);
}

.option-description {
    font-size: 0.875rem;
    color: var(--vectara-text-muted);
    line-height: 1.5;
}

.option-description code {
    background: rgba(63, 81, 181, 0.1);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
}

/* Crawler Links Section */
.crawler-links {
    background: rgba(63, 81, 181, 0.05);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin: 1.5rem 0;
}

.crawler-links > p {
    margin: 0 0 1rem 0;
    color: var(--vectara-text-muted);
}

.link-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 0.75rem;
}

.crawler-link {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem 1rem;
    background: var(--md-default-bg-color);
    border: 1px solid var(--vectara-border);
    border-radius: 0.375rem;
    color: var(--vectara-primary);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
}

.crawler-link:hover {
    background: var(--vectara-primary);
    color: white;
    border-color: var(--vectara-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(63, 81, 181, 0.15);
}

.crawler-link-all {
    grid-column: 1 / -1;
    background: var(--vectara-primary);
    color: white;
    border-color: var(--vectara-primary);
}

.crawler-link-all:hover {
    background: rgba(63, 81, 181, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(63, 81, 181, 0.25);
}

/* Tips Section */
.tips-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
}

.tip-card {
    background: var(--md-default-bg-color);
    border: 1px solid var(--vectara-border);
    border-radius: 0.25rem;
    padding: 1.5rem;
    transition: all 0.2s ease;
}

.tip-card:hover {
    border-color: var(--vectara-primary);
    box-shadow: 0 4px 12px rgba(63, 81, 181, 0.1);
    transform: translateY(-2px);
}

.tip-card h3 {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0 0 1rem 0;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--md-default-fg-color);
}

.tip-card h3 svg {
    color: var(--vectara-primary);
    stroke: var(--vectara-primary);
    flex-shrink: 0;
}

.tip-card p {
    margin: 0 0 0.75rem 0;
    font-size: 0.875rem;
    color: var(--vectara-text-muted);
    line-height: 1.6;
}

.tip-card p:last-child {
    margin-bottom: 0;
}

.tip-card pre {
    margin: 0.75rem 0 0 0;
    background: var(--md-code-bg-color);
    border-radius: 0.375rem;
    padding: 1rem;
}

.tip-card pre code {
    font-size: 0.8125rem;
}

.tip-card ol,
.tip-card ul {
    margin: 0.75rem 0 0 0;
    padding-left: 1.25rem;
}

.tip-card li {
    margin: 0.375rem 0;
    font-size: 0.875rem;
    color: var(--vectara-text-muted);
    line-height: 1.6;
}

.tip-card li strong {
    color: var(--md-default-fg-color);
    font-weight: 600;
}

/* Dark mode adjustments for base configuration */
[data-md-color-scheme="slate"] .config-structure {
    background: rgba(63, 81, 181, 0.1);
}

[data-md-color-scheme="slate"] .option-item {
    background: rgba(255, 255, 255, 0.05);
}

[data-md-color-scheme="slate"] .option-description code {
    background: rgba(63, 81, 181, 0.2);
}

[data-md-color-scheme="slate"] .crawler-links {
    background: rgba(63, 81, 181, 0.1);
}

[data-md-color-scheme="slate"] .crawler-link {
    background: rgba(255, 255, 255, 0.05);
}

[data-md-color-scheme="slate"] .tip-card {
    background: rgba(255, 255, 255, 0.05);
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .link-grid {
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        gap: 0.5rem;
    }

    .crawler-link {
        padding: 0.5rem 0.75rem;
        font-size: 0.8125rem;
    }

    .tips-section {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .tip-card {
        padding: 1.25rem;
    }
}

