}

.crawler-card svg {
    color: var(--vectara-primary);
    stroke: var(--vectara-primary);
    flex-shrink: 0;
    margin-top: 0.125rem;
}

.crawler-card h4 {
    font-size: 0.875rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
